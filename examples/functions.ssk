# Fungsi (fungsi/tulakan)

fungsi tambah(x, y) {
    tulakan x + y
}

cetak("Hasil 5 + 3 =", tambah(5, 3))

# Fungsi rekursif
fungsi faktorial(n) {
    lamun (n == 0) {
        tulakan 1
    }
    tulakan n * faktorial(n - 1)
}

cetak("Faktorial 5 =", faktorial(5))

# Closure / Fungsi sebagai object
gawe pengali = fungsi(factor) {
    tulakan fungsi(x) {
        tulakan x * factor
    }
}

gawe kaliDua = pengali(2)
cetak("10 * 2 =", kaliDua(10))
