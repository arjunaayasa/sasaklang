{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "SasakLang",
    "scopeName": "source.sasaklang",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.sasaklang",
                    "match": "#.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.sasaklang",
                    "match": "\\b(yen|neng|salama|kanggo|balik|tipuq|lanjut)\\b"
                },
                {
                    "name": "keyword.declaration.sasaklang",
                    "match": "\\b(gawe|tetep|pungsi)\\b"
                },
                {
                    "name": "support.function.builtin.sasaklang",
                    "match": "\\b(tulis|tanya|panjang|jenis|waktu|dorong|pertama|akhir|antos|acak)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.sasaklang",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.sasaklang",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.sasaklang",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.sasaklang",
                    "match": "\\b(bener|salah)\\b"
                },
                {
                    "name": "constant.language.null.sasaklang",
                    "match": "\\b(kosong)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.sasaklang",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.logical.sasaklang",
                    "match": "(&&|\\|\\||!)"
                },
                {
                    "name": "keyword.operator.arithmetic.sasaklang",
                    "match": "(\\+|-|\\*|/|%)"
                },
                {
                    "name": "keyword.operator.assignment.sasaklang",
                    "match": "="
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.sasaklang",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.sasaklang",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}